<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="@color/transparent_clr" />
            <gradient android:angle="-90" android:endColor="#299FE6" android:startColor="#1E6498" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="@color/transparent_clr" />
            <gradient android:angle="-90" android:endColor="#00467A" android:startColor="#0283D1" />
        </shape>
    </item>
</selector>