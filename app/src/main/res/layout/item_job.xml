<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/job_title_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flutter Developer"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:maxLines="1"
                android:textSize="22sp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/verified"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/company_name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rough Technologies"
            android:textColor="@color/black_lite"
            android:textSize="18sp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/company_location_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Northampton Uk"
            android:textSize="18sp"
            android:maxLines="1"
            android:textColor="@color/black_lite"/>

        <LinearLayout
            android:layout_marginVertical="8dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:layout_width="wrap_content"
            android:background="@drawable/item_salary_bg"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/pound"/>

            <TextView
                android:id="@+id/salary_range_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50000 - 60000/Year"
                android:maxLines="1"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"/>

        </LinearLayout>

        <TextView
            android:id="@+id/posted_days_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted 2 days Ago"
            android:textColor="@color/gray_light"
            android:textSize="12sp"/>






        </LinearLayout>







    </androidx.cardview.widget.CardView>



</LinearLayout>