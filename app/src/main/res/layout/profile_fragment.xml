<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingVertical="10sp"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginVertical="20sp"
                android:text="Profile"
                android:textColor="@color/progress_clr"
                android:textSize="24sp"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:tint="@color/progress_clr"
                android:src="@drawable/ic_profile"/>


            <TextView
                android:layout_marginVertical="15sp"
                android:id="@+id/id_tv_username_in_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textColor="@color/dark_blue_clr"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text=""
                android:textSize="20sp"/>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15sp"
                android:paddingHorizontal="20sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:tint="@color/progress_clr"
                    android:src="@drawable/ic_message"/>

                <TextView
                    android:id="@+id/id_tv_email_in_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="@color/progress_clr"/>

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/grey_clr"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15sp"
                android:paddingHorizontal="20sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:tint="@color/progress_clr"
                    android:src="@drawable/ic_phone"/>

                <TextView
                    android:id="@+id/id_tv_number_in_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16dp"
                    android:textColor="@color/progress_clr"/>

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/grey_clr"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15sp"
                android:paddingHorizontal="20sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:tint="@color/progress_clr"
                    android:src="@drawable/ic_location"/>

                <TextView
                    android:id="@+id/id_tv_location_in_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Northampton Uk"
                    android:textSize="16dp"
                    android:textColor="@color/progress_clr"/>

            </LinearLayout>




        </LinearLayout>

    </ScrollView>

</RelativeLayout>