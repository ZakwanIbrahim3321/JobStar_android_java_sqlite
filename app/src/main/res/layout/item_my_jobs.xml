<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="5dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/job_title_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flutter Developer"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:maxLines="1"
                    android:textSize="22sp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/company_name_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rough Technologies"
                android:textColor="@color/black_lite"
                android:textSize="18sp"
                android:maxLines="2"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/company_location_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Northampton Uk"
                android:textSize="18sp"
                android:maxLines="1"
                android:textColor="@color/black_lite"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>