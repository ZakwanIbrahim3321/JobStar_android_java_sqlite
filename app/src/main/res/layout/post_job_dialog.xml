<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post A New Job"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/jobTitleDialog"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_light"
        android:hint="Job Title"/>

    <EditText
        android:id="@+id/jobCompanyDialog"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_light"
        android:hint="Company Name"/>

    <EditText
        android:id="@+id/jobLocationDialog"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_light"
        android:hint="Job Location"/>

    <EditText
        android:id="@+id/jobSalaryDialog"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_light"
        android:hint="Salary Range/Year"/>


    <RelativeLayout
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/LL_post"
            android:layout_marginVertical="10sp"
            android:layout_gravity="center"
            android:background="@drawable/popup_button_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content">

            <TextView
                android:paddingHorizontal="25sp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/LL_post"
            android:id="@+id/cancel_dialog_"
            android:layout_marginVertical="10sp"
            android:layout_gravity="center"
            android:background="@drawable/popup_button_style"
            android:layout_width="150dp"
            android:layout_height="wrap_content">

            <TextView
                android:paddingHorizontal="25sp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>


    </RelativeLayout>




</LinearLayout>