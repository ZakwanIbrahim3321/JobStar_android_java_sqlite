<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/job_title_item_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/hint_item_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Select the option below"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="15dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:maxLines="1"/>


    <LinearLayout
        android:id="@+id/update_fields_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/jobCompanyDialogAdmin"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_light"
            android:hint="Company Name"/>

        <EditText
            android:id="@+id/jobLocationDialogAdmin"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_light"
            android:hint="Job Location"/>

        <EditText
            android:id="@+id/jobSalaryDialogAdmin"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_light"
            android:hint="Salary Range/Year"/>


    </LinearLayout>


    <RelativeLayout
        android:layout_marginTop="10sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/update_item_admin"
            android:layout_marginVertical="10sp"
            android:layout_gravity="center"
            android:background="@drawable/popup_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:paddingHorizontal="15sp"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/update_item_admin"
            android:id="@+id/delete_item_admin"
            android:layout_marginVertical="10sp"
            android:layout_gravity="center"
            android:background="@drawable/popup_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:paddingHorizontal="15sp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/delete_item_admin"
            android:id="@+id/cancel_item_admin"
            android:layout_marginVertical="10sp"
            android:layout_gravity="center"
            android:background="@drawable/popup_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:paddingHorizontal="15sp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </LinearLayout>


    </RelativeLayout>




</LinearLayout>